    <style name="splashScreenImageViewStyle">
        <item name="android:src">@drawable/ic_run_custom</item>
    </style>

    <style name="EditTextBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>

    <style name="CardViewMarkerView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">#03A9F4</item>
